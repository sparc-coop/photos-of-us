@page "/photo/{id:int}/{name}"

@if (photo != null)
{
    <div class="container-xl py-sm-4 py-4">

        <div>
            <h2 class="text-dark">
                Purchase Photo
            </h2>
            <div class="line my-4">

            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <img src="@photo.Url" style="width: 100%;border-radius: 8px;box-shadow: 0 2px 4px 0 rgba(0,0,0,0.15);" />
            </div>
        </div>

        <div class="row mt-5 mt-sm-5">
            <div class="col-sm-6">
                <h5 style="font-weight: 600">
                    @photo.Name
                </h5>
            </div>
            <div class="col-auto ml-auto text-sm-right">
                <p class="mb-0">
                    @photo.Resolution
                </p>
                <p>
                    File Size: @photo.FileSize MB
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <p class="text-grey">
                    Published on @photo.UploadDateUtc.ToLocalTime().ToString("dd MMM, yyyy") by <a href="/Photographer/@photo.Photographer.Id">@photo.Photographer.FullName</a>
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <p>
                    So you're going abroad, you've chosen your destination and now you have to choose a hotel. Ten years ago, you'd have probably visited your local travel agent and trusted the face-to-face advice.
                </p>
            </div>
        </div>

        <div class="row mt-3 mt-sm-3">
            <div class="col-sm-9">
                @foreach (var item in photo.PhotoTag)
                {
                    <span class="badge badge-primary p-2">@item.Name</span>
                }
            </div>
            <div class="col-auto ml-auto">
                <button class="btn btn-secondary">
                    <span class="material-icons">
                        shopping_cart
                    </span>

                    Purchase
                </button>
            </div>
        </div>

        <div class="">
            <h3 class="text-dark">
                Photo Options
            </h3>

            <table class="table table-striped table-clear table-borderless">
                <thead>
                    <tr>
                        <th>
                            Type
                        </th>
                        <th>
                            Height
                        </th>
                        <th>
                            Length
                        </th>
                        <th>
                            Qty
                        </th>
                        <th>
                            Price
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int j = 0; j < 3; j++)
                    {
                        <tr>
                            <td>
                                Print
                            </td>
                            <td>
                                6in
                            </td>
                            <td>
                                4in
                            </td>
                            <td>
                                <select>
                                    @for (int i = 1; i <= 15; i++)
                                    {

                                        <option>
                                            @i
                                        </option>

                                    }
                                </select>

                                <button class="btn btn-secondary btn-sm text-red">
                                    <span class="material-icons">
                                        shopping_cart
                                    </span>
                                    Add to Cart
                                </button>
                            </td>
                            <td>
                                $7.75
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}

@code {
    [Parameter]
    public int id { get; set; }

    [Parameter]
    public string name { get; set; }

    PhotoModel photo = new PhotoModel();

    protected async override Task OnParametersSetAsync()
    {
        photo = await GetPhoto(id);
    }

    public async Task<PhotoModel> GetPhoto(int id)
    {
        return await Http.GetFromJsonAsync<PhotoModel>($"Photo/{id}");
    }
}
