@page "/Pricing"

@layout EmptyLayout

<div class="pricing">
    <div class="section1">
        <div class="header">
            <a class="header__logo" href="/">
                <img src="/images/logo.png" />
                <div class="header__logo__text">Photos of Us</div>
            </a>
            <div class="header__social">
                <a href="https://twitter.com/Photos_Of_Us"><img src="/images/icons/twitter-white.png" /></a>
                <a href="https://www.facebook.com/photosofusapp/"><img src="/images/icons/fb-white.png" /></a>
                <a href="https://www.instagram.com/photos_of_us/"><img src="/images/icons/ig-white.png" /></a>
            </div>
        </div>
        <div class="content">
            <div class="slogan">Paying Is A Snap</div>
            <div class="content__subinfo">
                Whether you're an occasional snapper, a frequent snapper, or a super snapper, we've got a plan that will suit your budget.
            </div>
        </div>
        <div class="pricing--options">
            <div class="pricing--options__container">
                <div class="free @(Selected == 1 ? "selected" : "")" @onclick="@(() => SelectOption(1))">
                    <img src="/images/Camera 1@2x.png"/>
                    <div class="pricing--title">Occasional Snapper</div>
                    <div class="pricing--subtitle">
                        Perfect for newbies! This plan is ideal if you snap pics here and there as you get into the swing of things.
                    </div>
                    <div class="price">Free</div>
                    <ul>
                        <li><i class="material-icons">check_circle_outline</i>2 GB Photo storage</li>
                        <li><i class="material-icons">check_circle_outline</i>POU branding</li>
                        <li><i class="material-icons">check_circle_outline</i>8% Take of all sales</li>
                        <li class="alt">Option for professional prints</li>
                    </ul>
                    <button class="signup" @onclick="Login">Sign Up Now</button>
                </div>
                <div class="option2 @(Selected == 2 ? "selected" : "")" @onclick="@(() => SelectOption(2))">
                    <img src="/images/Camera 2@2x.png" />
                    <div class="pricing--title">Frequent Snapper</div>
                    <div class="pricing--subtitle">
                        Photography is your life! You always have your camera by your side so that you never miss the perfect photo op.
                    </div>
                    <div class="price">$7.99/mo</div>
                    <ul>
                        <li><i class="material-icons">check_circle_outline</i>100 GB Photo storage</li>
                        <li><i class="material-icons">check_circle_outline</i>No POU branding</li>
                        <li><i class="material-icons">check_circle_outline</i>Custom logo</li>
                        <li><i class="material-icons">check_circle_outline</i>Option for professional prints</li>
                    </ul>
                    <button @onclick="Login" class="signup signup--beta">Free While In Beta</button>
                </div>
                <div class="option3 @(Selected == 3 ? "selected" : "")" @onclick="@(() => SelectOption(3))">
                    <img src="/images/Camera 3@2x.png" />
                    <div class="pricing--title">Super Snapper</div>
                    <div class="pricing--subtitle">
                        Okay admit it, you snap A LOT of pics! A snapper like you needs unlimited space to keep up with all your clients.
                    </div>
                    <div class="price">$10.99/mo</div>
                    <ul>
                        <li><i class="material-icons">check_circle_outline</i>Unlimited photo storage</li>
                        <li><i class="material-icons">check_circle_outline</i>No POU branding</li>
                        <li><i class="material-icons">check_circle_outline</i>Custom logo</li>
                        <li><i class="material-icons">check_circle_outline</i>Option for professional prints</li>
                    </ul>
                    <button @onclick="Login" class="signup signup--beta">Free While In Beta</button>
                </div>
            </div>
        </div>
        <div class="pricing--team">
            <img src="/images/Team Image@2x.png" />
            <div class="pricing--team__content">
                <div class="pricing--title">Team Snappers</div>
                <div class="pricing--title2">Got a team? Chat with us to get a quote!</div>
                <div class="pricing--subtitle">
                    We know not everyone goes solo. For those of you who need a plan that suits your team of snappers, we've got you! Request a quote to get your own personalized plan.
                </div>
                @if (ShowForm == false)
                {
                    <div class="button--quote" @onclick="@(e => ShowForm = true)">Request A Quote!</div>
                }
                @if (ShowForm == true)
                {
                    <form class="teamQuote">
                        <input placeholder="Your email address" />
                        <button @onclick="SubmitEmail">Submit Email</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@code {
    int Selected = 2;
    bool ShowForm = false;
    string FormEmail { get; set; }

    void SelectOption(int selected)
    {
        Selected = selected;
    }

    private void SubmitEmail()
    {

    }

    private void Login()
    {
        Navigation.NavigateTo($"authentication/login?returnUrl={Uri.EscapeDataString(Navigation.Uri)}");
    }
}