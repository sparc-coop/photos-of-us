@model List<PhotoViewModel>
@{ 
    Layout = "~/Home/Views/Shared/_Layout.cshtml";
}

<div class="photoPage" ng-controller="PhotoCtrl">
    <div class="header" ng-init="getPhotoCode(); getPhotographer(@Model.Select(x => x.PhotographerId).First())">
        <h2 class="header-large">Photos With Code <span>{{code}}</span></h2>
        <div class="photoPage__photographer-info">
            <div>
                <div class="title">Photographer</div>
                <div class="name">{{photographer.displayName}}</div>
            </div>
            <img src="https://www.sonypark360.net/wp-content/uploads/2017/08/profile-pictures.png"/>
        </div>
    </div>

    <div class="divider"></div>

    <div class="photoPage__image-container">
        <div class="photoPage__image-container--photo" ng-repeat="photo in codePhotos.slice(((currentPage-1)*photosPerPage), ((currentPage)*photosPerPage)) " 
             style="background-image: linear-gradient(-180deg, rgba(0,0,0,0.00) 44%, #000000 100%), url({{photo.Url}})" 
             ng-click="viewPhoto(photo.Id)">
            <div class="photoName">{{photo.Name}} <img src="~/images/icons/share-white.png" /></div>
        </div>
        <ul uib-pagination total-items="codePhotos.length" ng-model="currentPage" items-per-page="photosPerPage" ng-show="(codePhotos.length/photosPerPage) > 1"></ul>﻿
        @*<div ng-click="switchCode()" class="newCode">Not the photos you were looking for?</div>*@
    </div>

    <div class="photoPage__footer">
        <div class="subHeader">Like What You See?</div>
        <div class="header">They Would Look Better On Your Wall!</div>
        <div class="container">
            <div class="purchase--info">
                Why not purchase a print and get it shipped right to your door?
                We offer many different sizes and stock. Or alternatively, you can purchase a digital version.
            </div>
            <div class="photoPage__footer--right">
                @*<div class="title">Starting At Just $5 Per Photo</div>*@
                @*<div class="button--yellow button--yellow--large" ng-click="goToPurchase(code)"><img src="~/images/icons/cart-red.png"/>Buy Them Now</div>*@
            </div>
        </div>       
    </div>

</div>
