@model ProfileViewModel
@{
    ViewData["Title"] = "Search";
    Layout = "_Layout";
}

<script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.js"></script>
<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>


<link rel="stylesheet" href="~/lib/ng-tags-input/ng-tags-input.min.css" />



@section ProfileImageBackdrop {
    <div class="photographer-search--backdrop"></div>
}


    <div ng-controller="PhotographerCtrl">
        <div class="photographer-search-wrap">
            <div class="photographer-search">
                <tags-input ng-model="tags" add-on-paste="true" type="text" class="photographer-searchTerm" placeholder="What are you looking for?">
                    <auto-complete source="loadTags($query)"></auto-complete>
                    <button type="submit" class="photographer-searchButton">
                        <img src="~/images/icons/magnifier_white.png" />
                    </button>
                </tags-input>
            </div>
        </div>

        
            <tags-input ng-model="tags" add-on-paste="true">
                <auto-complete source="loadTags($query)"></auto-complete>
            </tags-input>
            <p>Model: {{tags}}</p>
            <div>
                <div class="grid">
                    <div class="grid-sizer"></div>
                    @foreach (var Photo in @Model.Photos)
                {
                    <div class="grid-item">
                        <img src="@Photo.Url" ng-click="viewPhoto(@Photo.Id)" />
                    </div>
            }
                </div>
                <script>
                    var grid = document.querySelector('.grid');
                    var msnry;

                    imagesLoaded(grid, function () {
                        // init Isotope after all images have loaded
                        msnry = new Masonry(grid, {
                            itemSelector: '.grid-item',
                            columnWidth: '.grid-sizer',
                            percentPosition: true
                        });
                    });
                </script>
            </div>
        
    </div>
<style>
    * {
        box-sizing: border-box;
    }

    /* force scrollbar */
    html {
        overflow-y: scroll;
    }

    body {
        font-family: sans-serif;
    }

    .grid {
        /*background: #DDD;*/
    }

        /* clear fix */
        .grid:after {
            content: '';
            display: block;
            clear: both;
        }

    /* ---- .grid-item ---- */

    .grid-sizer,
    .grid-item {
        width: 33%;
        padding: 10px;
    }

    .grid-item {
        float: left;
    }

        .grid-item img {
            display: block;
            width: 100%;
        }
</style>





