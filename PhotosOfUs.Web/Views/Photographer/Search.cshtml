@model List<PhotoViewModel>
@{
    ViewData["Title"] = "Search";
    Layout = "_Layout";
}

<script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.js"></script>
<script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>


<link rel="stylesheet" href="~/lib/ng-tags-input/ng-tags-input.min.css" />



@section ProfileImageBackdrop {
<div style="position:absolute;
    " class="photographer-search__bigtitle">LESS FAFF, MORE SNAPS</div>
    <div class="photographer-search--backdrop"></div>
}


    <div ng-controller="PhotographerCtrl" ng-init="loadTags();">
        <div class="photographer-search-wrap">
            <div class="photographer-search">
                <tags-input ng-model="tags" add-on-paste="true" type="text" class="photographer-searchTerm" placeholder="What are you looking for?">
                    <auto-complete source="loadedtags"></auto-complete>
                    <button type="submit" ng-click="searchPhotos(tags)" class="photographer-searchButton">
                        <img src="~/images/icons/magnifier_white.png" />
                    </button>
                </tags-input>
            </div>
        </div>
            <div>
                <div class="grid">
                    <div class="grid-sizer"></div>
                    @foreach (var Photo in @Model )
                    {
                        <div class="grid-item">
                            <img src="@Photo.Url" ng-click="viewPhoto(@Photo.Id)" />
                        </div>
                    }
                </div>
                {{ arrangePhotos() }}
            </div>
        
    </div>
<style>
    * {
        box-sizing: border-box;
    }

    /* force scrollbar */
    html {
        overflow-y: scroll;
    }

    body {
        font-family: sans-serif;
    }

    .grid {
        /*background: #DDD;*/
    }

        /* clear fix */
        .grid:after {
            content: '';
            display: block;
            clear: both;
        }

    /* ---- .grid-item ---- */

    .grid-sizer,
    .grid-item {
        width: 33%;
        padding: 10px;
    }

    .grid-item {
        float: left;
    }

        .grid-item img {
            display: block;
            width: 100%;
        }
</style>





