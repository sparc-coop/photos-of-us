
@{
    Layout = null;
    ViewData["Title"] = "EditFolderModal";
}

<md-dialog class="newfolder-dialog">
    <md-dialog-content>
        <div class="col-md-12">
            <div class="pull-left">
                <h2 class="header-xs">Edit Folder</h2>
            </div>
            <div class="pull-right">
                <div class="close" aria-label="Close" ng-click="close()"><i class="material-icons">close</i></div>
            </div>
        </div>
        <div class="col-md-12">
            <form method="POST" class="form">
                <div class="form-input">
                    <input ng-model="name" type="text" placeholder="Folder Name" />
                </div>
                <div class="form-button">
                    <button ng-disabled="!name || name.length <= 1" class="button--yellow" ng-click="addFolder(name)">Create</button>
                </div>

            </form>
        </div>
    </md-dialog-content>
</md-dialog>


