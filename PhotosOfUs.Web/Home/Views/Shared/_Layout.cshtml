            </script>
            <script src="~/js/PoU-bundle.js" asp-append-version="true"></script>
        </environment>*@

    <script>
        $(".container").click(function (e) {
            $('#cart--preview').fadeOut(300);
            $('.adminMenu').fadeOut(300);
        })
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
