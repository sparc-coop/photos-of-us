
@{
    Layout = null;
    ViewData["Title"] = "NewFolderModal";
}

<md-dialog class="newfolder-dialog">
    <md-dialog-content>
        <div class="col-md-12">
            <div class="pull-left">
                <h2 class="header-xs" ng-if="!folderId">New Folder</h2>
                <h2 class="header-xs" ng-if="folderId">Rename Folder</h2>
            </div>
            <div class="pull-right">
                <div class="close" aria-label="Close" ng-click="close()"><i class="material-icons">close</i></div>
            </div>
        </div>
        <div class="col-md-12">
            <form method="POST" class="form">
                <div class="form-input">
                    <input ng-model="folderName" type="text" placeholder="Folder Name" />
                </div>
                <div class="form-button">
                    <button ng-if="!folderId" ng-disabled="!folderName || folderName.length <= 1" class="button--yellow" ng-click="addFolder(folderName)">Create</button>
                    <button ng-if="folderId" ng-disabled="!folderName || folderName.length <= 1" class="button--yellow" ng-click="renameFolder(folderId,folderName)">Save</button>
                </div>                
            </form>
        </div>
    </md-dialog-content>
</md-dialog>


