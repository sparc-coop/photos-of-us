@page "/"
@namespace PhotosOfUs.App.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Photos Of Us</title>
    <base href="~/" />
    <link href="https://fonts.googleapis.com/css?family=Dosis:400,600,800|Open+Sans:400,600,700" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@@simonwep/pickr/dist/themes/nano.min.css" />
    <environment include="Development">
        <link rel="stylesheet" href="~/css/App.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/App.min.css" />
    </environment>
</head>
<body>
    <app>@(await Html.RenderComponentAsync<App>())</app>

    <script src="_framework/blazor.server.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@simonwep/pickr/dist/pickr.min.js"></script>
    <script>
        window.navigateToNonBlazorUrl = function (url) {
            window.location.href = url;
        };
        window.initColorPicker = function (el, scope) {
            const pickr = Pickr.create({
                el: el,
                theme: 'nano'
            });
            pickr.on('save', function (color) {
                scope.invokeMethodAsync('SetColor', color.toHEXA().toString());
            });
            return pickr;
        };
    </script>
</body>
</html>
